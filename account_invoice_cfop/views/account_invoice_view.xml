<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cfop_view_invoice_line_tree" model="ir.ui.view">
            <field name="name">cfop.account.invoice.line.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="br_account.view_br_account_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quantity']" position="before">
                    <field name="cfop_code" />
                </xpath>
                <field name="account_id" position="replace" >
                    <field name="account_id" invisible="1" />
                </field>
                <field name="uom_id" position="replace" >
                    <field name="uom_id" string="Unid." class="oe_inline" groups="uom.group_uom"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
