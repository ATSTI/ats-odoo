<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tag_view_move_form" model="ir.ui.view">
            <field name="name">tag.view.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_info_group']/field[@name='invoice_user_id']" position="after">
                    <field name="tag_campo" widget="many2many_tags" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="tag_view_move_search" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field string="Marcadores"
                        name="tag_campo"
                        filter_domain="[('tag_campo','ilike', self)]"
                />
                <!-- <filter name="group_by_tag_campo" string="Marcadores" context="{'group_by':'tag_campo'}"/> -->
            </xpath>
        </field>
    </record>

    </data>
</odoo>
