<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fiscal_position_template_form" model="ir.ui.view">
        <field name="name">fiscal.position.template.form</field>
        <field name="model">account.fiscal.position.template</field>
        <field name="inherit_id" ref="account.view_account_position_template_form" />
        <field name="arch" type="xml">
            <form>
                <xpath expr="//field[@name='chart_template_id']" position="after">
                    <field name="ind_final" invisible="1"/>
                    <field name="ind_pres" invisible="1"/>
                </xpath>
            </form>
        </field>
    </record>
    <record id="fiscal_position_form" model="ir.ui.view">
        <field name="name">fiscal.position.form</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form" />
        <field name="arch" type="xml">
            <form>
                <field name="finalidade_emissao" invisible="1"/>
                <field name="ind_final" invisible="1"/>
                <field name="ind_pres" invisible="1"/>
            </form>
        </field>
    </record>
    <!-- <record id="fiscal_position_tax_form" model="ir.ui.view">
