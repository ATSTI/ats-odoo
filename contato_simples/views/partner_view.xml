<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_view_order_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="priority">9999</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='fiscal']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <field name="legal_name" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <label for="legal_name" position="replace">
                <label string="" for="legal_name"/>
            </label>
        </field>
    </record>
</odoo>
