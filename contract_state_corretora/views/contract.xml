<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="contract_contract_form_view" model="ir.ui.view">
        <field name="name">contract.contract.form.contract.sale</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract_novo.contract_contract_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[last()]" position="after">
                <button
                    name="action_draft"
                    type="object"
                    string="Ap贸lice Transmitida"
                    states="cancel"
                />
                <button
                    name="action_confirm"
                    type="object"
                    string="Ap贸lice Emitida"
                    states="draft"
                />
                <button
                    name="action_loss"
                    type="object"
                    string="Ap贸lice perdida"
                    states="draft"
                />
                <button
                    name="action_cancel"
                    type="object"
                    string="Ap贸lice Vencida"
                    states="confirm"
                />
                <field
                    name="state"
                    widget="statusbar"
                    statusbar_visible="draft,confirm"
                />
                
            </xpath>
            <field name="tag_ids" position="after">
                <field name="stage_id" options="{'no_create_edit': True}" />
            </field>
        </field>
    </record>
    <record id="corretora_state_contract_contract_tree_view" model="ir.ui.view">
        <field name="name">Lista Apolices Corretora</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract_corretora.corretora_contract_contract_tree_view" />
        <field name="arch" type="xml">
            <field name="date_end" position="after">
                <field name="state" />
            </field>
        </field>
    </record>
    <record id="view_contract_contract_stage_kanban" model="ir.ui.view">
        <field name="name">contract.stage.kanban</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract_novo.view_contract_contract_kanban" />
        <field name="arch" type="xml">
            <kanban position="attributes" >
                <attribute name="group_create">false</attribute>
            </kanban>
            <field name="name" position='after'>
                <field name="stage_id" />
            </field>
            <field name="name" position='after'>
                <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
            </field>
            <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">stage_id</attribute>
            </xpath>
        </field>
    </record>
    <record id="action_customer_contract" model="ir.actions.act_window">
        <field name="name">Apolices e Contratos</field>
        <field name="res_model">contract.contract</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
        <field name="search_view_id" ref="contract_novo.contract_contract_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new contract.
            </p>
        </field>
    </record>
    <record id="action_customer_contract_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_contract_contract_stage_kanban"/>
        <field name="act_window_id" ref="contract_novo.action_customer_contract"/>
    </record>
    <!-- <record id="action_customer_contract_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="contract_novo.contract_contract_tree_view"/>
        <field name="act_window_id" ref="contract_novo.action_customer_contract"/>
    </record> -->
</odoo>
