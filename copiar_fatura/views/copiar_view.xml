<?xml version="1.0"?>
<odoo>
    <record id="account_copia_form" model="ir.ui.view">
        <field name="name">l10n_br_account.copia.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_br_account.invoice_form" />
        <field name="priority">399</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_fiscal_document']" position="before">            
                <button
                    name="action_copiar_fatura"
                    type="object"
                    class="btn-success"
                    attrs="{'invisible': [('document_type_id', '=', False)]}"
                    style="background-color:#ffffe9;"           
                >
                    <span>Copiar Fatura</span>
                </button>
            </xpath>
        </field>
    </record>

</odoo>