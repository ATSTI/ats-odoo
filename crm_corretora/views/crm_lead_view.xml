<odoo>
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">Add industry field</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <group name="lead_priority" position="before">
                <group>
                </group>
                <group string="Corretora"> 
                    <field name="tipo" />
                    <field name="tipo_seguro" />
                    <field name="forma_de_pag" />
                    <field name="valorl" />
                    <field name="comissao" />
                </group>
                <group string=".">
                    <field name="cod_seguro" />
                    <field name="corretora_id" />
                    <field name="vencimentos" />
                    <field name="apolice" />
                </group>
            </group>
        </field>
    </record>
    <record model="ir.ui.view" id="crm_case_tree_view_leads">
        <field name="name">Add industry field as tree column</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="tipo" optional="show"/>
                <field name="tipo_seguro" optional="show"/>
            </field>
        </field>
    </record>
    <record id="crm_case_kanban_view_leads_inherit" model="ir.ui.view">
        <field name="name">crm.lead.kanban.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="tipo" />
                <field name="tipo_seguro" />
            </field>
        </field>
    </record>
</odoo>
