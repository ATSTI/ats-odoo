<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--Email template -->
        <record id="email_niver_template" model="mail.template">
            <field name="name">Email Niver Template</field>
            <field name="email_from">carlos@atsti.com.br</field>
            <field name="email_to">ats@atsti.com.br</field>
            <field name="lang">${user.lang}</field>
            <field name="model_id" ref="base.model_ir_module_module"/>
            <field name="auto_delete" eval="False"/>
            <field name="subject">Birthday Notification</field>
            <field name="body_html" ></field>

        </record>

        <record model="ir.cron" id="email_niver_cron">
            <field name="name">Envia Email Aniversario</field>
            <field name="model_id" ref="model_email_niver"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'email.niver'"/>
            <field name="function" eval="'send_birthday_wish'"/>
            <field name="args" eval="'(5,)'" />
        </record>




    </data>
</odoo>
