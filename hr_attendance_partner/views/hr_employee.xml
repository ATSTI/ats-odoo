<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_employee_pub_partner_view_form" model="ir.ui.view">
        <field name="name">hr.employee.partner.view.form.inherit</field>
        <field name="model">hr.employee.public</field>
        <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="cnpj_cpf" invisible="1" />
                <field name="rg" invisible="1" />
            </field>
        </field>
    </record>

    <!-- <field name="name" string="Visitante" filter_domain="['|','|','|', ('work_email', 'ilike', self), ('name', 'ilike', self),('cnpj_cpf', '=', self), ('rg','=', self)]"/> -->

    <record id="hr_employee_partner_view_search" model="ir.ui.view">
        <field name="name">hr.employee.search</field>
        <field name="model">hr.employee.public</field>
        <field name="inherit_id" ref="hr.hr_employee_public_view_search"/>
        <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" string="Visitante" filter_domain="['|','|','|',('work_email','ilike',self),('name','ilike',self),('cnpj_cpf', 'like', self), ('rg','like', self)]"/>
                </field>
        </field>
    </record>

</odoo>
