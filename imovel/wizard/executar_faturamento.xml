<odoo>
    <record model="ir.ui.view" id="executar_faturamento_view">
        <field name="model">executar.faturamento</field>
        <field name="arch" type="xml">
            <form string="Executar Faturamento">
                <group>
                    <field name="data_faturar" />
                    <field name="grupo" />
                    <field name="buscar_grupo" />
                    <field name="cobranca" />
                    <field name="plano" />
                    <field name="user_id" />
                </group>
                <footer>
                    <button
                        name="execute_faturamento"
                        string="Executar Faturamento"
                        class="btn-primary"
                        confirm="Confirma execução desse faturamento?"
                        type="object"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_executar_faturamento" model="ir.actions.act_window">
        <field name="name">Executar Faturamento</field>
        <field name="res_model">executar.faturamento</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="executar_faturamento_view"/>
        <field name="target">new</field>
    </record>
</odoo>
