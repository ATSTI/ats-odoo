<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="import_cli_tree">
            <field name="name">importa.cli.tree</field>
            <field name="model">import.client</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Importar Planilha">
                    <field name="name"/>
                    <field name="input_file"/>
                    <field name="state"/>
                    <field name="user_id" colspan="2"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="import_cli_view_event_form">
            <field name="name">import.cli.view.event.form</field>
            <field name="model">import.client</field>
            <field name="arch" type="xml">
                <form string="Importar Planilha" version="7.0">
                    <header>
                        <button name="set_done" string="Importado" type="object" states="open" class="oe_highlight"/>
                        <button name="set_open" string="Re-ativar" type="object" states="done,cancelled" class="oe_highlight"/>
                        <button name="set_cancelled" string="Suspender" type="object" states="open" class="oe_highlight"/>
                        <field name="state" nolabel="1" colspan="2" widget="statusbar" statusbar_visible="open,done"/>
                    </header>
                    <sheet>
                        <label string="Informar Clientes."/>
                        <p />
                        <field name="name" colspan="2"/>
                        <group>
                            <field name="num_ini" colspan="2"/>
                            <field name="num_fim" colspan="2"/>
                        </group>
                        <group>
                            <field name="input_file" colspan="2"/>
                            <field name="user_id" colspan="2"/>
                        </group>
                        <group>
                            <button string="Importar" type="object" name="import_to_xls"/>
                            <button string="Criar Contratos" type="object" name="criar_contratos"/>
                            <button string="Importa Contas Receber" type="object" name="import_contas_cliente"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="import_cli_event_action" model="ir.actions.act_window">
            <field name="name">Imp. Clientes</field>
            <field name="res_model">import.client</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="import_cli_tree"/>
        </record>        


        <menuitem name="Imp. Clientes" id="import_cli_aparelhos_menu" parent="sale.menu_sale_invoicing" sequence="98" action="import_cli_event_action"/>

    </data>
</odoo>
