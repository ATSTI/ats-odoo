<?xml version="1.0"?>
<odoo>
        <record model="ir.ui.view" id="import_lista_tree">
            <field name="name">importa.lista.tree</field>
            <field name="model">import.lista.preco</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Importar Planilha">
                    <field name="name"/>
                    <field name="input_file"/>
                    <field name="state"/>
                    <field name="user_id" colspan="2"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="import_lista_form">
            <field name="name">import.lista.form</field>
            <field name="model">import.lista.preco</field>
            <field name="arch" type="xml">
                <form string="Importar Planilha de Lista de Preço" version="7.0">
                    <header>
                        <button name="set_done" string="Importado" type="object" states="open" class="oe_highlight"/>
                        <button name="set_open" string="Re-ativar" type="object" states="done,cancelled" class="oe_highlight"/>
                        <button name="set_cancelled" string="Suspender" type="object" states="open" class="oe_highlight"/>
                        <field name="state" nolabel="1" colspan="2" widget="statusbar" statusbar_visible="open,done"/>
                    </header>
                    <sheet>
                        <field name="name" colspan="2"/>
                        <field name="input_file" colspan="2"/>
                        <field name="user_id" colspan="2" invisible="1"/>
                        <button string="Importar" type="object" name="import_to_db"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="import_pricelist_view_form" model="ir.ui.view">
            <field name="name">import.pricelist.form.inherit.sale</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="sale.product_pricelist_view_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <button name="action_import_lista" string="Importar Planilha" type="object"/>
                </field>
            </field>
        </record>


        <record id="import_lista_action" model="ir.actions.act_window">
            <field name="name">Imp. Lista de Preços</field>
            <field name="res_model">import.lista.preco</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="import_lista_form"/>
        </record>        

</odoo>
