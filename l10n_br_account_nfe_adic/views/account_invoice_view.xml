<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Customer Invoice views -->
    <record id="account_invoice_adic_form" model="ir.ui.view">
        <field name="name">l10n_br_account.invoice.adic.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_br_account.invoice_form" />
        <field name="priority">399</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="document_date" string="Data de emissÃ£o"/>
                <field name="date_in_out" string="Data de entrada/saida"/>
            </xpath>
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="edoc_purpose" />
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="adic_ids" string="Dados adicionais" >
                    <form>
                        <sheet>
                            <group string="Dados adicionais">
                                <group>
                                    <field name="comment_ids" widget="many2many_tags"/>
                                    <field name="fiscal_additional_data" readonly="1"/>
                                    <field name="manual_customer_additional_data" />
                                    <field name="customer_additional_data" readonly="1"/>
                                    <field name="send_file_id" invisible="1"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </page>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="document_related" string="Documentos relacionados" >
                    <field name="document_related_ids" />
                    <separator colspan="4" string="Subsequents Documents" />
                    <field name="document_subsequent_ids">
                        <tree editable="bottom">
                            <field
                                name="subsequent_document_id"
                                context="{'fiscal_document_complete_name': True}"
                            />
                            <field name="fiscal_operation_id" />
                            <field name="operation_performed" />
                            <field name="subsequent_operation_id" />
                            <button
                                name="show_subsequent_document"
                                type="object"
                                string="Show Document"
                                attrs="{'invisible': [('subsequent_document_id', '=', False)]}"
                            />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>