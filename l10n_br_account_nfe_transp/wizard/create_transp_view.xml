<odoo>
    <record model="ir.ui.view" id="create_transp_form_view">
        <field name="name">wizard_transp_form_view</field>
        <field name="model">wizard.create.transp</field>
        <field name="arch" type="xml">
            <form string="Detalhe Transportadora">
                <group>
                    <group>
                        <field name="nfe40_transporta" />
                        <field name="incoterm_id" />
                        <field name="carrier_id" />
                        <field name="vehicle_id" />
                    </group>
                </group>
                <footer>
                    <button
                        name="action_create_transp"
                        string="SALVAR"
                        class="btn-success"
                        type="object"
                    />
                    <button string="DESCARTAR" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_transp" model="ir.actions.act_window">
        <field name="name">Informação Tranportadora</field>
        <field name="res_model">wizard.create.transp</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_transp_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>
