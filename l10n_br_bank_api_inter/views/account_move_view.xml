<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="l10n_br_account_payment_inter_form" model="ir.ui.view">
        <field name="name">l10n_br_account.payment.inter.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_br_account_payment_brcobranca.l10n_br_account_payment_brcobranca_form" />
        <field name="arch" type="xml">
            <button name="button_draft" position="after">
                <button
                    name="view_boleto_pdf"
                    type="object"
                    string="Imprimir Boleto"
                    class="btn-primary"
                    attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('payment_method_code', 'not in', ('240', '400', '500', 'electronic'))]}"
                />
            </button>
        </field>
    </record>

</odoo>
