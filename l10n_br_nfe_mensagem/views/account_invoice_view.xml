<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Customer Invoice views -->
    <record id="account_invoice_msg_form" model="ir.ui.view">
        <field name="name">l10n_br_account.invoice.msg.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_br_account.invoice_form" />
        <field name="priority">399</field>
        <field name="arch" type="xml">
            <!-- <xpath expr="//div[@class='alert alert-danger']" position="insert"> -->
            <xpath expr="//sheet" position="before">
                <div
                    class="alert alert-danger"
                    role="alert"
                    attrs="{'invisible': [('xml_error_message','=',False)]}"
                >
                    <strong>XML validation errors:</strong>
                    <field name="xml_error_message" readonly="1" />
                </div>
            </xpath>
            <xpath expr="//button[@name='open_fiscal_document']" position="replace">            
                <button
                    name="open_fiscal_document"
                    type="object"
                    class="btn-success"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('document_type_id', '=', False)]}"
                    style="background-color:#ffffe9;"                
                >
                    <span>Nota Fiscal - NFe</span>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="open_fiscal_document" string="Nota Fiscal" class="oe_highlight"
                type="object" attrs="{'invisible': [('document_type_id', '=', False)]}" 
                icon="fa-pencil-square-o"/>
            </xpath>
        </field>
    </record>

</odoo>