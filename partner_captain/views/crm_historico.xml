<?xml version="1.0"?>
<odoo>
    <data>
        <record id="crm_historico_tree" model="ir.ui.view">
            <field name="name">crm.historico.tree</field>
            <field name="model">crm.historico</field>
            <field name="arch" type="xml">
                <tree string="Equipamento/Curso/Viagens">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="tipo"/>
                </tree>
            </field>
        </record>
        <record id="crm_historico_form" model="ir.ui.view">
            <field name="name">crm.historico.form</field>
            <field name="model">crm.historico</field>
            <field name="arch" type="xml">
                <form string="Equipamento/Curso/Viagens">
                    <group>
                        <field name="name"/>
                        <field name="tipo"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="crm_historico_action" model="ir.actions.act_window">
            <field name="name">Cad. Historico</field>
            <field name="res_model">crm.historico</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

        <menuitem action="crm_historico_action" id="menu_crm_historico_show" parent="crm.menu_crm_config_lead" sequence="6" groups="account.group_account_invoice"/>
    </data>
</odoo>
