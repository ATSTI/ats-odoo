<?xml version="1.0"?>
<odoo>
    <!--  Partners inherited form -->
    <record id="partner_clube_form_view" model="ir.ui.view">
        <field name="name">partner_clube_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_br_base.l10n_br_base_partner_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="replace">
                <field name="parent_id" widget="res_partner_many2one" options="{'no_create_edit': True, 'no_create': True}" attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
            </field>
            <xpath expr='//kanban' position="inside">
                <field name="data_nascimento" />
            </xpath>
            <xpath expr='//div[@class="oe_kanban_details"]' position="inside">
                <div>
                    <field name="data_nascimento" />
                    <field name="age" attrs="{'invisible': [('data_nascimento', '=', False)]}" />
                </div>
            </xpath>
            <xpath expr='//page[@name="sales_purchases"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//page[@name="fiscal"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//div[@name="div_address"]' position="inside">
                <field name="data_nascimento" />
                <field name="age" attrs="{'invisible': [('data_nascimento', '=', False)]}" />
                <field name="sexo" />
                <field name="estado_civil" />
                <field name="parentesco" />
            </xpath>
            <field name="ref" position="replace"/>
            <!-- <field name="website" position="replace"/> -->
            <xpath expr="/form/sheet/group" position="inside">
                <group>
                    <field name="ref" string="N. Título" />
                    <field name="chave_acesso" />
                    <field name="cartao" />
                </group>
                <group>
                    <field name="data_admissao" />
                    <field name="data_desligamento" />
                    <field name="category" options="{'no_create': True, 'no_edit': True}" />
                </group>
            </xpath>
            <field name="phone" position="after">
                <field name="fone_comercial" />
            </field>
            <notebook position="inside">
                <page string="Informações Pessoais">
                    <div>
                        <label for="pagante" />
                        <field name="pagante" />
                        <label for="dependente" />
                        <field name="dependente" />
                        <label for="inadimplente" />
                        <field name="inadimplente" />
                        <label for="conselheiro" />
                        <field name="conselheiro" />
                        <label for="funcionario" />
                        <field name="funcionario" />
                        <label for="diretor" />
                        <field name="diretor" />
                    </div>
                    <group>
                        <group>
                            <field name="data_nascimento" />
                            <field name="age" attrs="{'invisible': [('data_nascimento', '=', False)]}" />
                            <field name="sexo" />
                            <field name="estado_civil" />
                            <field name="parentesco" />
                        </group>
                        <group>
                            <field name="empresa" />
                            <field name="profissao" />
                            <field name="pai" />
                            <field name="mae" />
                            <field name="naturalidade" />
                            <field name="nacionalidade" />
                        </group>

                    </group>
                </page>
            </notebook>
            <xpath expr='//page[@name="sales_purchases"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr='//page[@name="fiscal"]' position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form/sheet/group" position="inside">
                <group colspan="5">
                    <field name="data_nascimento" attrs="{'invisible' : [('type', '!=', 'contact')]}"/>
                    <field name="age" attrs="{'invisible': [('type', '!=', 'contact')]}"/>
                    <field name="chave_acesso" attrs="{'invisible' : [('type', '!=', 'contact')]}"/>
                </group>
                <group colspan="5">
                    <field name="sexo" attrs="{'invisible' : [('type', '!=', 'contact')]}"/>
                    <field name="estado_civil" attrs="{'invisible' : [('type', '!=', 'contact')]}"/>
                    <field name="parentesco" attrs="{'invisible' : [('type', '!=', 'contact')]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_partner_simple_form_clube" model="ir.ui.view">
        <field name="name">partner_simple_form_clube</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_simple_form" />
        <field name="arch" type="xml">
            <field name="mobile" position="after" >
                <field name="data_nascimento" />
                <field name="age" attrs="{'invisible': [('data_nascimento', '=', False)]}" />
                <field name="sexo" />
                <field name="estado_civil" />
                <field name="parentesco" />
                <field name="chave_acesso" />
            </field>
        </field>
    </record>

    <record id="view_br_base_partner_tree_clube" model="ir.ui.view">
        <field name="name">br_base.partner.tree.clube</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="cnpj_cpf" position="before">
                <field name="parent_id" string="Titular" />
                <field name="cartao" string="Cartão" />
                <field name="age" />
            </field>
            <field name="legal_name" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="inscr_est" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="city" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="country_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="company_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="activity_ids" position="before">
                <field name="category" string="Categoria" />
            </field>
        </field>
    </record>
</odoo>
