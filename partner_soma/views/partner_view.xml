<?xml version="1.0"?>
<odoo>

    <!--  Partners inherited form -->
    <record id="partner_birthdate_form_view" model="ir.ui.view">
        <field name="name">partner_birthdate_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="br_base.view_br_base_partner_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="replace">
                <field name="parent_id"
                                context="{'default_customer': customer}"
                                attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
            </field>
            <field name="name" position="after">
                <field name="firstname" />
            </field>
            <field name="vat" position="replace">
                <field name="vat" string="Conta Bancaria" />
                <field name="birthdate_date" />
                <field name="revised" />
            </field>    
            <notebook position="inside">
                <page string="InformaÃ§Ãµes Pessoais">
                    <group>
                        <field name="contatonome" />
                        <field name="contatofone" />
                        <field name="rg_emissao" />
                        <field name="rg_orgao" />
                        <field name="cnh" />
                        <field name="cnh_emissao" />
                        <field name="cnh_primhabilita" />
                        <field name="cnh_vcto" />
                        <field name="estado_civil" />
                        <field name="sexo" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    
</odoo>
