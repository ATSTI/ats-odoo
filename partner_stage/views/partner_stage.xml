<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Field Service Stage -->
    <record id="partner_stage_tree_view" model="ir.ui.view">
        <field name="name">Estagio</field>
        <field name="model">partner.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="sequence" widget="handle" groups="base.group_no_one"/>
                <field name="name"/>
                <field name="is_closed"/>
                <field name="custom_color"/>
            </tree>
        </field>
    </record>

    <record id="partner_stage_form_view" model="ir.ui.view">
        <field name="name">Estagio</field>
        <field name="model">partner.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="custom_color"/>
                            <field name="fold"/>
                            <field name="is_closed"/>
                            <field name="is_default"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Stage Description and Tooltips">
                        <p class="text-muted" colspan="2">
                            You can add a description to help your coworkers understand the meaning and purpose of the stage.
                        </p>
                        <field name="description" placeholder="Add a description..." nolabel="1" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_partner_stage" model="ir.actions.act_window">
        <field name="name">Estagio</field>
        <field name="res_model">partner.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_stage_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Stage.
            </p>
        </field>
    </record>

    <record id="partner_stage_search_view" model="ir.ui.view">
        <field name="name">partner.stage.search</field>
        <field name="model">partner.stage</field>
        <field name="arch" type="xml">
            <search string="Search partner Workers">
                <field name="name"/>
            </search>
        </field>
    </record>


    <menuitem action="action_partner_stage" id="menu_partner_stage" groups="stock.group_stock_user" name="Estagio" sequence="36" parent="partner.menu_partner_order"/>

</odoo>