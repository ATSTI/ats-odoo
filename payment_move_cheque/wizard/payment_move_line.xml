<?xml version="1.0"?>
<odoo>
    <record id="view_payment_account_cheque_form" model="ir.ui.view">
        <field name="name">wizard.payment.account.cheque</field>
        <field name="model">payment.account.move.line</field>
        <field name="inherit_id" ref="br_account_payment.view_payment_account_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form" position="replace">
            <form string="Registrar Pagamento">
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="partner_type" invisible="1"/>
                            <field name="amount_residual" invisible="1"/>
                            <field name="partner_id"/>
                            <field name="move_line_id"/>
                            <field name="invoice_id"/>
                        </group>
                    </group>                
                    <group>
                        <group>
                            <label for="amount"/>
                            <div name="amount_div" class="o_row">
                                <field name="amount"/>
                                <field name="currency_id"
                                       options="{'no_create': True, 'no_open': True}"
                                       groups="base.group_multi_currency"/>
                            </div>
                            <field name="journal_id" widget="selection" attrs="{'invisible': [('amount', '=', 0)]}"/>
                        </group>
                        <group>
                            <field name="payment_date"/>
                            <newline />
                            <field name="e_cheque" invisible="1"/>
                            <label for="cheque_barra" attrs="{'invisible': [('e_cheque', '!=', True)]}"/>
                            <field name="cheque_barra" attrs="{'invisible': [('e_cheque', '!=', True)]}"/>
                            <group attrs="{'invisible': [('e_cheque', '!=', True)]}">                            
                                <field name="cheque_barra" />
                                <field name="cheque" />
                                <field name="comp" />
                                <field name="banco" />
                                <field name="agencia" />
                                <field name="conta" />
                                <field name="e_cheque"/>
                            </group>
                            <field name="communication" />
                        </group>
                        <!--
                        <group attrs="{'invisible': [('payment_difference', '=', 0.0)]}">
                            <label for="payment_difference" string="Diferença Pagamento"/>
                            <div>
                                <field name="payment_difference"/>
                                <div attrs="{'invisible': [('payment_difference','=',0)]}">
                                    <label for="writeoff_account_id" class="oe_edit_only" string="Lançar diferença em"/>
                                    <field name="writeoff_account_id" string="Lançar diferença em" attrs="{'required': [('payment_difference', '>', 0)]}"/>
                                    <label for="journal_id" string="Diário" attrs="{'invisible': [('amount', '!=', 0)]}"/>
                                    <field name="journal_id" string="Diário" widget="selection" attrs="{'invisible': [('amount', '!=', 0)]}"/>
                                    <label for="writeoff_label" class="oe_edit_only" string="Descrição"/>
                                    <field name="writeoff_label" attrs="{'required': [('payment_difference', '>', 0)]}"/>
                                </div>
                            </div>
                        </group>-->
                    </group>
                    <footer>
                        <button string='Confirmar Pagamento' name="action_confirm_payment" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
             </form>
             </xpath>
        </field>
    </record>    
</odoo>
