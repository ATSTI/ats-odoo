<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_pos_cupom_main_document">
    <t t-call="report.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':'pt_br'})" />
        <div class="page">
            <h6 style="text-align:center"><span t-esc="doc.date_order"/> <span t-esc="pos_reference"/> </h6>
            <div class="oe_structure" />
            <br/>
            <br/>
            <span t-esc="doc.company_id.name"/>
            <br/>
            Telefone: <span t-esc="doc.company_id.phone"/>
            <br/>
            Vendedor: <span t-esc="doc.user_id.name"/>
            <br/>
            <br/>
            <t t-set="sub" t-value="0"/>
            <t t-foreach="doc.lines" t-as="l">
                <span t-esc="l.product_id.name"/> <span t-esc="l.qty"/> R$ <span t-esc="l.qty*l.price_unit"/>
                <t t-set="sub" t-value="sub + (l.qty * l.qty*l.price_unit) "/>
                <br/>
            </t>
            <br/>
            <br/>
            <h4>Subtotal: </h4> R$<span t-esc="sub"/>
            <br/>
            <h4>Desconto: </h4> R$<span t-esc="sub - doc.amount_total"/>
            <br/>
            <h3>Total: </h3> R$<span t-esc="doc.amount_total"/>
            <br/>
            <br/>
            <t t-foreach="doc.statement_ids" t-as="d">
                <span t-esc="d.journal_id.name"/> <span t-esc="d.journal_currency_id.name"/> R$<span t-esc="d.amount"/>
                <br/>
            </t>
            <br/>
            Troco: R$<span t-esc="doc.amount_return"/>
            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_pos_cupom_main">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="pos_order_print.report_pos_cupom_main_document" t-lang="pt_br"/>
        </t>
    </t>
</template>
</odoo>
