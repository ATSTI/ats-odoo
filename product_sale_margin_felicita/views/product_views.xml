<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_margin_form" model="ir.ui.view">
            <field name="name">product.template.margin.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_standard_price']" position="after">
                    <group>
                        <field name="margin"/>
                        <field name="qtde_atacado"/>
                        <field name="preco_atacado"/>
                        <field name="image_promocao_512"/>
                    </group>   
                </xpath> 
                    <field name="categ_id" position="after">                    
                        <field name="tipo_venda"/>
                    </field>
                    <field name="standard_price" position="attributes">
                        <attribute name="groups">l10n_br_fiscal.group_manager</attribute>
                    </field>
                    <label for="standard_price" position="attributes">
                        <attribute name="groups">l10n_br_fiscal.group_manager</attribute>
                    </label>
            </field>
        </record>

        <record id="product_margin_form" model="ir.ui.view">
            <field name="name">product.margin.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="attributes">
                    <attribute name="groups">l10n_br_fiscal.group_manager</attribute>
                </field>
                <label for="standard_price" position="attributes">
                    <attribute name="groups">l10n_br_fiscal.group_manager</attribute>
                </label>   
            </field>
        </record>

        <record id="pos_order_tipo_form" model="ir.ui.view">
            <field name="name">pos.order.tipo.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="full_product_name" position="after">
                    <field name="tipo_venda"/>
                </field>
            </field>
        </record>            

    </data>        
</odoo>
