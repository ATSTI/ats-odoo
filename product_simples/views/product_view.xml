<odoo>
    <record id="product_view_order_form" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="description" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="fiscal" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="sale" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="inventory" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="general_information" string="Informações Gerais">
                    <group>
                        <field name="type" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="categ_id" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="default_code" string="Código" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="barcode" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="list_price" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="standard_price" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="uom_id" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                    </group>
                    <group name="fiscal" string="Fiscal" groups="l10n_br_fiscal.group_user">
                        <field name="fiscal_type" required="1"/>
                        <field name="icms_origin" attrs="{'required': [('fiscal_type', '!=', '09')], 'invisible': [('fiscal_type', '=', '09')]}"/>
                        <field name="ncm_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="tax_icms_or_issqn" required="1"/>
                        <field name="fiscal_genre_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="cest_id" attrs="{'invisible': [('fiscal_type', '=', '09')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
