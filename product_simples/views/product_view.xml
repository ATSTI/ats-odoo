<odoo>
    <record id="product_view_order_form_simple" model="ir.ui.view">
        <field name="name">product.template.form.simple</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="priority">9999</field>
        <field name="arch" type="xml">
            <field name="description" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <xpath expr="//page[@name='fiscal']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//group[@name='sale']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//page[@name='inventory']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="replace">
                <page name="general_information" string="Informações Gerais">
                    <group>
                        <field name="company_id" groups="base.group_multi_company"
                            options="{'no_create': True}" invisible="1"/>
                        <field name="uom_po_id" groups="uom.group_uom" options="{'no_create': True}"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="cost_currency_id" invisible="1"/>
                        <field name="product_variant_id" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <field name="type" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="categ_id" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="default_code" string="Código" class="oe_edit_only" style="background-color: #d2d2ff;" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="default_code" string="Código" class="oe_read_only" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="barcode" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="list_price" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="standard_price" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                        <field name="uom_id" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                    </group>
                    <group name="fiscal" string="Fiscal" groups="l10n_br_fiscal.group_user">
                        <field name="fiscal_type" required="1"/>
                        <field name="icms_origin" attrs="{'required': [('fiscal_type', '!=', '09')], 'invisible': [('fiscal_type', '=', '09')]}"/>
                        <field name="ncm_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="tax_icms_or_issqn" required="1"/>
                        <field name="fiscal_genre_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="cest_id" attrs="{'invisible': [('fiscal_type', '=', '09')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
