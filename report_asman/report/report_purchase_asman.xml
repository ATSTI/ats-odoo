<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_doc_asman" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-call="web.basic_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <div class="page">
                    <table style="border: 0px solid; width:100%">
                        <tr>
                            <!-- <td style="border: 0px solid; width:40% ; height:35px">
                                <div style="width: 100%;float: left;">
                                    <img t-attf-src="data:image/*;base64,{{o.company_id.logo}}"
                                        t-att-alt="o.company_id.name" style="width:100%; height:70px"/>
                                </div>
                            </td> -->
                            <td style="text-align: left; border: 0px solid; width:60%; " >
                                <span style="font-size:12px" t-field="o.company_id.name"/>                                
                                <br/><span style="font-size:12px">CNPJ/CPF: </span><span style="font-size:12px" t-field="o.company_id.cnpj_cpf"/>
                                <br/><span style="font-size:12px" t-field="o.company_id.street_name"/><span style="font-size:12px"> , </span><span style="font-size:12px" t-field="o.company_id.street_number"/> <span style="font-size:12px"> - </span><span style="font-size:12px" t-field="o.company_id.district"/><span style="font-size:12px"> , CEP: </span><span style="font-size:12px" t-field="o.company_id.zip"/><span style="font-size:12px"> - </span><span style="font-size:12px" t-field="o.company_id.state_id.code"/> 
                                <br/><span style="font-size:12px" t-field="o.company_id.phone"/> <span style="font-size:12px"> | </span><span style="font-size:12px" t-field="o.company_id.email"/>
                            </td>
                            <td style="text-align: left; border: 0px solid; width:40%; ">
                                <div t-if="o.partner_id">
                                    <b style="font-size:11px" > Fornecedor:</b>
                                    <br/><span style="font-size:9px" t-field="o.partner_id.name" class="m-0"/>
                                    <br/><span style="font-size:9px">CNPJ/CPF: </span><span style="font-size:10px" t-field="o.partner_id.cnpj_cpf"/>
                                    <br/><span style="font-size:9px" t-field="o.partner_id.street_name"/><span style="font-size:10px"> , </span><span style="font-size:10px" t-field="o.partner_id.street_number"/> <span style="font-size:10px"> - </span><span style="font-size:10px" t-field="o.partner_id.district"/><span style="font-size:10px"> , CEP: </span><span style="font-size:10px" t-field="o.partner_id.zip"/><span style="font-size:10px"> - </span><span style="font-size:10px" t-field="o.partner_id.state_id.code"/> 
                                    <br/><span style="font-size:9px" t-field="o.partner_id.phone"/> <span style="font-size:10px"> | </span><span style="font-size:10px" t-field="o.partner_id.email"/>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <div class="oe_structure"/>
                    <br/>
                    <br/>
                    <h2 t-if="o.state == 'draft'">Solicitação de Cotação #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state in ['sent', 'to approve']">Pedido de Compra #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state in ['purchase', 'done']">Pedido de Compra #<span t-field="o.name"/></h2>
                    <h2 t-if="o.state == 'cancel'">Pedido de Compra Cancelado #<span t-field="o.name"/></h2>

                    <div id="informations" class="row mt32 mb32">
                        <div t-if="o.user_id" class="col-3 bm-2">
                            <strong>Vendedor:</strong>
                            <p t-field="o.user_id" style="font-size: 12px"/>
                        </div>
                        <div t-if="o.partner_ref" class="col-3 bm-2">
                            <strong>Data do Pedido:</strong>
                            <p t-field="o.partner_ref" style="font-size: 12px"/>
                        </div>
                        <div t-if="o.date_order" class="col-3 bm-2">
                            <strong>Data do Pedido:</strong>
                            <p t-field="o.date_order" style="font-size: 12px"/>
                        </div>
                    </div>
                    <br/>
                    <table style="border: 1px solid black; border-collapse: collapse; width: 100%">
                        <thead>
                            <tr>
                                <th name="th_description" style="border: 1px solid black; width:30%; height: 35px; text-align: center; font-size: 15px">
                                    <strong>Descrição</strong>
                                </th>
                                <!-- <th name="th_taxes"><strong>Taxes</strong></th> -->
                                <th name="th_date_req" style="border: 1px solid black; width:15%; height: 35px; text-align: center; font-size: 15px"> 
                                    <strong>Data de Recebimento.</strong>
                                </th>
                                <th name="th_quantity" style="border: 1px solid black; width:15%; height: 35px; text-align: center; font-size: 15px">
                                    <strong>Qtd</strong>
                                </th>
                                <th name="th_price_unit" style="border: 1px solid black; width:20%; height: 35px; text-align: center; font-size: 15px">
                                    <strong>Preço unitário</strong>
                                </th>
                                <th name="th_amount" style="border: 1px solid black; width:20%; height: 35px; text-align: center; font-size: 15px">
                                    <strong>Total</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-foreach="o.order_line" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td id="product" style="border: 1px solid black; width:30%; height: 35px; text-align: center; font-size: 11px">
                                            <span t-field="line.name"/>
                                        </td>
                                        <!-- <td name="td_taxes">
                                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                        </td> -->
                                        <td style="border: 1px solid black; width:15%; height: 35px; text-align: center; font-size: 11px">
                                            <span t-field="line.date_planned"/>
                                        </td>
                                        <td style="border: 1px solid black; width:15%; height: 35px; text-align: center; font-size: 11px">
                                            <span t-field="line.product_qty"/>
                                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                        </td>
                                        <td style="border: 1px solid black; width:20%; height: 35px; text-align: right; font-size: 11px">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td style="border: 1px solid black; width:20%; height: 35px; text-align: right; font-size: 11px">
                                            <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" id="section">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" id="note">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99" id="subtotal">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <br/>
                    <div id="total" class="row justify-content-end">
                        <div>
                            <table style="border: 1px solid black; border-collapse: collapse; width: 100%; align: right">
                                <tr>
                                    <td name="td_subtotal_label" style="border: 1px solid black; width:50%; text-align: left; font-size: 14px"><strong>Subtotal</strong></td>
                                    <td style="width:50%; text-align: right; font-size: 11px">
                                        <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td name="td_amount_total_label" style="border: 1px solid black; width:50%; text-align: left; font-size: 14px; background-color: #656565"><strong>Total</strong></td>
                                    <td style="width:50%; text-align: right; font-size: 11px; background-color: #656565">
                                        <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
