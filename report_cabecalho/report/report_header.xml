<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cabecalho_id">
        <t t-call="web.html_container">
            <t t-set="docs" t-value="docs.with_context({'lang':docs.partner_id.lang})"/>
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure"/>
                    <br/>
                    <table style="border: 0px solid; width:100%">
                        <tr>
                            <td style="border: 0px solid; width:40% ; height:35px">
                                <div style="width: 100%;float: left;">
                                    <img t-attf-src="data:image/*;base64,{{o.company_id.logo}}"
                                        t-att-alt="o.company_id.name" style="width:100%; height:70px"/>
                                </div>
                            </td>
                            <td style="text-align: right; border: 0px solid; width:60%" >
                                <span style="font-size:12px" t-field="o.company_id.name"/>                                
                                <br/><span style="font-size:12px">CNPJ/CPF: </span><span style="font-size:12px" t-field="o.company_id.cnpj_cpf"/>
                                <br/><span style="font-size:12px" t-field="o.company_id.street_name"/><span style="font-size:12px"> , </span><span style="font-size:12px" t-field="o.company_id.street_number"/> <span style="font-size:12px"> - </span><span style="font-size:12px" t-field="o.company_id.district"/><span style="font-size:12px"> , CEP: </span><span style="font-size:12px" t-field="o.company_id.zip"/><span style="font-size:12px"> - </span><span style="font-size:12px" t-field="o.company_id.state_id.code"/> 
                                <br/><span style="font-size:12px" t-field="o.company_id.phone"/> <span style="font-size:12px"> | </span><span style="font-size:12px" t-field="o.company_id.email"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>