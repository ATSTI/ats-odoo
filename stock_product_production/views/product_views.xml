<odoo>
    <record id="view_prod_template_property_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='stock_property']" position="replace">
                <group string="Counterpart Locations" name="stock_property">
                    <field name="property_stock_production"/>
                    <field name="property_stock_inventory"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
